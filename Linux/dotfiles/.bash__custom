function docker_bash () {
    if [ $# -eq 0 ]; then
        echo "Usage: docker_bash <container_hash>"
        return 1
    fi

    container_hash=$1

    # Check if the container exists and is running
    if ! docker inspect --format="{{.Id}}" $container_hash &> /dev/null; then
        echo "Container '$container_hash' not found or not running"
        return 1
    fi

    echo 
    echo '----------------------------------'
    echo 'running...'
    echo 
    echo '   exec docker exec -it $container_hash /bin/bash'
    echo
    echo 'where...'
    echo 
    echo "   container_hash=$1"
    echo     
    echo '----------------------------------'
    echo

    docker exec -it $container_hash /bin/bash
    return 1
}

